<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="climbing_gym.list">
      <field name="name">AssociationType list</field>
      <field name="model">climbing_gym.association_type</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="climbing_gym.action_window">
      <field name="name">Association Type</field>
      <field name="res_model">climbing_gym.association_type</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->

    <record model="ir.actions.server" id="climbing_gym.action_server">
      <field name="name">climbing_gym server</field>
      <field name="model_id" ref="model_climbing_gym_association_type"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": self._name,
        }
      </field>
    </record>



  </data>
</odoo>