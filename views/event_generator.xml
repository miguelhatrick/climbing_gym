<odoo>
    <data>
        <record model="ir.actions.act_window" id="event_generator_list_action">
            <field name="name">Event generator list</field>
            <field name="res_model">climbing_gym.event_generator</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_filter_confirmed': 1}</field>
         <!--   <field name="search_view_id" ref="event_generator_search_view"/> -->
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">No records yet!</p>
            </field>
        </record>

        <record model="ir.ui.view" id="event_generator_form_view">
            <field name="name">event_generator.form</field>
            <field name="model">climbing_gym.event_generator</field>
            <field name="arch" type="xml">
                <form string="Event generator form">
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="pending,generate,confirmed,cancel"/>
                        <button name="action_cancel" string="Cancel" states='confirmed,pending,generate' type="object" class="oe_highlight" confirm="Are you sure you want to do this?" groups="climbing_gym.group_superadmin"/>
                        <button name="action_generate" string="Generate" states='pending' type="object" class="oe_highlight" groups="climbing_gym.group_superadmin"/>
                        <button name="action_confirm" string="Confirm" states='generate' type="object" class="oe_highlight" />
                        <button name="action_pending" string="Revive" states='cancel' type="object" class="oe_highlight" />
                    </header>
                    <sheet>
                        <h1>
                            <field name="name"/>
                        </h1>
                        <notebook>
                            <page string="Data">
                                <group col="4" colspan="4">
                                    <field name="month"/>
                                    <field name="year"/>
                                    <field name="templates" widget="many2many_tags"/>
                                </group>
                                <group colspan="4">
                                    <field name="events"/>
                                     <!-- <field name="certificate_image_small" widget='image' options='{"preview_image": "certificate_image_small"}'/> -->
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="event_generator_tree_view">
            <field name="name">event_generator.tree</field>
            <field name="model">climbing_gym.event_generator</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="month"/>
                    <field name="year"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="event_generator_search_view">
            <field name="name">event_generator.search</field>
            <field name="model">climbing_gym.event_generator</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="month"/>
                    <field name="year"/>
                    <field name="state"/>
                    <filter string='Confirmed' name='filter_active' domain="[('state','=','pending')]"/>
                    <group expand="0" string="Group By">
                        <filter name="group_confirmed" string="Status" context="{'group_by':'state'}"/>
                    </group>
                </search>
            </field>
        </record>

    </data>
</odoo>